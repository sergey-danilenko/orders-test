          "401": {
            "content": {
              "application/json": {
                "example": {
                  "detail": "Invalid or missing API Key"
                }
              }
            },
            "description": "Не авторизован"
          },
          "422": {
            "content": {
              "application/json": {
                "example": {
                  "detail": [
                    {
                      "loc": [
                        "string",
                        0],
                      "msg": "string",
                      "type": "string"
                    }
                  ]
